<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notepad"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button6"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/rounded"
        android:text="@string/summeries"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button7"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/btn_main_select"
        android:backgroundTint="#FF1111"
        android:backgroundTintMode="src_in"
        android:drawableTintMode="src_over"
        android:text="@string/checkSummaries"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="115dp"
        android:layout_height="94dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/logout"
        android:onClick="logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginTop="552dp"
        android:background="@drawable/rounded"
        android:text="@string/upload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tl"
        android:layout_width="283dp"
        android:layout_height="432dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="70dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingBottom="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_main_select"
                android:text="@string/choose_university"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_main_select"
                android:foregroundGravity="center"
                android:text="@string/choose_course"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_main_select"
                android:drawableTintMode="multiply"
                android:text="@string/choose_lecturer"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:layout_width="137dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_main_select"
                android:drawableEnd="@android:drawable/ic_menu_search"
                android:drawableTint="#8AFFFFFF"
                android:drawableTintMode="multiply"
                android:drawingCacheQuality="high"
                android:focusable="auto"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="40dp"
                android:paddingEnd="25dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:selectAllOnFocus="true"
                android:text="@string/search"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="normal|bold" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="231dp"
        android:layout_height="121dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="585dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>