<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--    <item android:state_pressed="true" android:drawable="@drawable/rounded_red"-->
<!--        />-->
    <item android:state_focused="true" android:drawable="@drawable/rounded_red"/>


    <item android:state_hovered="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/shadow"/>
                    <corners android:radius="19dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px" android:drawable="@drawable/rounded_red">

            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/shadow"/>
                    <corners android:radius="19dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px" android:drawable="@drawable/rounded_red">

            </item>
        </layer-list>
    </item>


    <item android:drawable="@drawable/rounded_turquoise"/>
</selector>